# Tenant Configuration
TENANT_SLUG=app
TENANT_NAME=CloudFreedom Internal
TENANT_ID=internal-001

# Ports (ändern für verschiedene Tenants)
LITELLM_PORT=4000
OPENWEBUI_PORT=3000

# LiteLLM Master Key (generiere mit: openssl rand -base64 32)
LITELLM_MASTER_KEY=your_litellm_master_key_here

# =====================================================
# AI PROVIDER KEYS (Choose your providers)
# =====================================================

# GOOGLE VERTEX AI (GEMINI) - EU Frankfurt
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=AIzaxxxxxxxxxxxxxxxxxxxxx
VERTEX_PROJECT=your-gcp-project-id
VERTEX_LOCATION=europe-west3

# MICROSOFT AZURE OPENAI - Germany West Central
# Get from: https://portal.azure.com (Keys and Endpoint)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-08-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# AWS BEDROCK (CLAUDE) - EU Frankfurt
# Get from: https://console.aws.amazon.com/bedrock (API Keys)
AWS_BEDROCK_API_KEY=your_base64_encoded_bedrock_key_here
AWS_REGION_NAME=eu-central-1
AWS_BEDROCK_RUNTIME_REGION=eu-central-1

# LEGACY DIRECT API KEYS (Not recommended for EU hosting)
# OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxx
# ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxx

# CloudFreedom Integration
POCKETBASE_URL=https://api.cloudfreedom.de
BILLING_API_URL=https://billing.cloudfreedom.de
BILLING_API_KEY=your_billing_api_key_from_billing_api_env

# Database (generiere Passwort mit: openssl rand -base64 32)
POSTGRES_DB=cloudfreedom_app
POSTGRES_USER=cloudfreedom
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Redis (generiere Passwort mit: openssl rand -base64 32)
REDIS_PASSWORD=your_secure_redis_password_here

# PocketBase OAuth (für OpenWebUI Single Sign-On)
# Create in PocketBase Admin UI: Settings -> OAuth2 Applications
POCKETBASE_OAUTH_CLIENT_ID=your_oauth_client_id
POCKETBASE_OAUTH_CLIENT_SECRET=your_oauth_client_secret

# OpenWebUI Settings
ENABLE_SIGNUP=false  # Set to true for public instances, false for invite-only

